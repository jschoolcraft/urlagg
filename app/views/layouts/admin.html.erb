<!DOCTYPE html>

<html lang="<%= I18n.locale %>">

<head>

  <meta charset="utf-8" />

  <title><%= yield :title %></title>

  <%= stylesheet_link_tag "/admin/stylesheets/screen",
                          "/admin/stylesheets/application",
                          "/admin/vendor/fancybox/jquery.fancybox-1.3.1.css" %>
  <%= yield :stylesheets -%>

  <%= javascript_include_tag "/admin/javascripts/jquery-1.4.2.min.js",
                             "/admin/javascripts/jquery.searchField.js",
                             "/admin/javascripts/jquery.rails.js",
                             "/admin/vendor/fancybox/jquery.fancybox-1.3.1.pack.js",
                             "/admin/vendor/fancybox/jquery.easing-1.3.pack.js",
                             "/admin/vendor/fancybox/jquery.mousewheel-3.0.2.pack.js",
                             "/admin/javascripts/application" %>
  <%= yield :javascripts -%>

  <%= csrf_meta_tag %>

</head>

<body>

  <div id="wrapper">

    <div id="header_wrapper">

      <div id="header">
        <%= header %>
        <div class="clear"></div>
      </div>

      <div id="links">

        <div class="left">
          <%= apps %>
        </div>

        <div class="right">
          <%= login_info %>
        </div>

        <div class="clear"></div>

      </div>

    </div>

    <div id="content_wrapper">

      <div id="sidebar">
        <%= yield :sidebar %>
      </div>

      <div id="content">
        <%= yield %>
      </div>

      <div class="clear"></div>

    </div>

    <div id="footer_wrapper">

      <div id="footer">
        <%= Typus.admin_sub_title.html_safe %>
      </div>

    </div>

  </div>

</body>

</html>
